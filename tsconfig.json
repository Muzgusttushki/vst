{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@cratko/redis": [
        "libs/redis/src"
      ],
      "@cratko/redis/*": [
        "libs/redis/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}